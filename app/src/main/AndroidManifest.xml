<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mike.FTCScanner" >

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.mike.FTCScanner.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mike.FTCScanner.DisplayWifiScan"
            android:label="@string/title_activity_display_wifi_scan"
            android:parentActivityName="com.example.mike.FTCScanner.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mike.FTCScanner.MainActivity" />
        </activity>
        <activity
            android:name="com.example.mike.FTCScanner.DisplayChannelScan"
            android:label="@string/title_activity_display_channel_scan"
            android:parentActivityName="com.example.mike.FTCScanner.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mike.FTCScanner.MainActivity" />
        </activity>
        <activity
            android:name="com.example.mike.FTCScanner.DisplayChannelScan2"
            android:label="@string/title_activity_display_channel_scan2"
            android:parentActivityName="com.example.mike.FTCScanner.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mike.FTCScanner.MainActivity" />
        </activity>
        <activity
            android:name="com.example.mike.FTCScanner.DisplayWifiScan2"
            android:label="@string/title_activity_display_wifi_scan2"
            android:parentActivityName="com.example.mike.FTCScanner.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mike.FTCScanner.MainActivity" />
        </activity>
        <activity
            android:name="com.example.mike.FTCScanner.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.example.mike.FTCScanner.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mike.FTCScanner.MainActivity" />
        </activity>
    </application>

</manifest>
